<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Birthday Gift Card</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: linear-gradient(135deg, #ff9a9e, #fad0c4);
      font-family: sans-serif;
    }
    .container {
      text-align: center;
      width: 90%;
      max-width: 400px;
    }
    .card {
      display: none;
      padding: 2em;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      animation: fadeIn 1s ease-in-out forwards;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.8); }
      to { opacity: 1; transform: scale(1); }
    }
    input[type="text"], input[type="file"] {
      padding: 0.5em 1em;
      border: none;
      border-radius: 8px;
      font-size: 1em;
      margin-bottom: 1em;
      width: 80%;
    }
    button {
      padding: 0.5em 1em;
      border: none;
      border-radius: 8px;
      background-color: #ff6f91;
      color: #fff;
      font-size: 1em;
      cursor: pointer;
      width: 80%;
      margin-top: 0.5em;
    }
    button:hover {
      background-color: #ff477e;
    }
    img.birthday-photo {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 50%;
      margin-bottom: 1em;
      border: 4px solid #ff9a9e;
    }
    a.download-link {
      display: block;
      margin-top: 1em;
      color: #ff6f91;
      text-decoration: underline;
      font-size: 0.9em;
    }
    @media (max-width: 480px) {
      .card {
        padding: 1.5em;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="input-area">
      <input type="text" id="nameInput" placeholder="Enter your name" /><br>
      <input type="file" id="imageInput" accept="image/*" /><br>
      <button onclick="showCard()">Open Gift Card</button>
    </div>
    <div class="card" id="giftCard">
      <h1>ðŸŽ‰ Happy Birthday <span id="userName"></span>! ðŸŽ‰</h1>
      <img id="uploadedImage" class="birthday-photo" alt="Birthday Photo" />
      <p>Wishing you a day filled with love, joy, and surprises!</p>
      <a class="download-link" id="downloadLink" href="#" download="birthday_card.html">Download Gift Card</a>
    </div>
  </div>

  <script>
    function showCard() {
      const name = document.getElementById("nameInput").value.trim();
      const imageInput = document.getElementById("imageInput");

      if (name === "") {
        alert("Please enter your name!");
        return;
      }

      const file = imageInput.files[0];
      if (!file) {
        alert("Please upload a photo!");
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        const imageUrl = e.target.result;
        document.getElementById("uploadedImage").src = imageUrl;

        document.getElementById("userName").innerText = name;
        document.querySelector(".input-area").style.display = "none";
        document.getElementById("giftCard").style.display = "block";

        // Downloadable card content (image won't persist offline)
        const cardHTML = `
<!DOCTYPE html>
<html>
<head><meta charset='UTF-8'><meta name='viewport' content='width=device-width, initial-scale=1.0'><title>Gift Card</title></head>
<body style='display:flex;flex-direction:column;justify-content:center;align-items:center;height:100vh;background:#ff9a9e;color:#fff;font-size:2em;font-family:sans-serif;'>
  <h1>ðŸŽ‰ Happy Birthday ${name}! ðŸŽ‰</h1>
  <img src="${imageUrl}" style="width:150px;height:150px;border-radius:50%;border:4px solid white;margin:1em;" alt="Birthday Photo" />
</body>
</html>`;
        const encoded = "data:text/html;charset=utf-8," + encodeURIComponent(cardHTML);
        document.getElementById("downloadLink").href = encoded;
      };
      reader.readAsDataURL(file);
    }
  </script>
</body>
</html>
